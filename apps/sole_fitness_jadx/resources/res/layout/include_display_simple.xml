<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/profile_title_include"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        layout="@layout/include_program_title"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <include
            android:id="@+id/display_distance_include"
            layout="@layout/include_display_simple_number"/>
        <View
            android:background="@color/white"
            android:layout_width="1dp"
            android:layout_height="@dimen/display_number_line_height"/>
        <include
            android:id="@+id/display_calories_include"
            layout="@layout/include_display_simple_number"/>
        <View
            android:background="@color/white"
            android:layout_width="1dp"
            android:layout_height="@dimen/display_number_line_height"/>
        <RelativeLayout
            android:id="@+id/display_simple_time_layout"
            android:layout_width="@dimen/display_number_time_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/display_number_margin_start_end"
            android:layout_marginEnd="@dimen/display_number_margin_start_end">
            <com.dyaco.sole.custom_view.TypefaceTextView
                android:textSize="@dimen/profiles_info_text_size"
                android:textColor="@color/light_gray"
                android:gravity="center"
                android:id="@+id/display_simple_time_title_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_centerHorizontal="true"/>
            <com.dyaco.sole.custom_view.TypefaceTextView
                android:textSize="@dimen/display_number_text_size"
                android:textColor="@color/display_number_blue"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/display_simple_time_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  0:00"
                android:layout_below="@+id/display_simple_time_title_textview"/>
        </RelativeLayout>
        <View
            android:background="@color/white"
            android:layout_width="1dp"
            android:layout_height="@dimen/display_number_line_height"/>
        <include
            android:id="@+id/display_hr_include"
            layout="@layout/include_display_simple_number"/>
        <View
            android:background="@color/white"
            android:layout_width="1dp"
            android:layout_height="@dimen/display_number_line_height"/>
        <include
            android:id="@+id/display_target_hr_include"
            layout="@layout/include_display_simple_number"/>
    </LinearLayout>
</LinearLayout>
