<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/register2_background_layout"
    android:background="@drawable/register2_spirit_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:id="@+id/register2_main_layout"
        android:background="@drawable/register2_spirit_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/register2_imageView"
            android:background="@drawable/register2_spirit_leftpic"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/register2_content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="30sp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:id="@+id/register2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_basic_info"
                android:fontFamily="sans-serif-smallcaps"/>
            <ImageView
                android:id="@+id/register2_stage_image"
                android:background="@drawable/register2_spirit_stage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:textSize="13sp"
                android:textColor="#444444"
                android:textColorHint="#444444"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/register2_name"
                android:background="@drawable/register2_spirit_textbox"
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:hint="@string/login_name"
                android:ems="10"
                android:inputType="textPersonName"
                android:fontFamily="sans-serif-smallcaps"/>
            <TextView
                android:textSize="13sp"
                android:textColor="#444444"
                android:textColorHint="#444444"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/register2_gender"
                android:background="@drawable/register2_spirit_textbox"
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:hint="@string/login_gender"
                android:ems="10"
                android:inputType="text"
                android:fontFamily="sans-serif-smallcaps"/>
            <TextView
                android:textSize="13sp"
                android:textColor="#444444"
                android:textColorHint="#444444"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/register2_birthday"
                android:background="@drawable/register2_spirit_textbox"
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:hint="@string/login_birthday"
                android:ems="10"
                android:inputType="text"
                android:fontFamily="sans-serif-smallcaps"/>
            <Button
                android:textSize="13sp"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:id="@+id/register2_next"
                android:background="@drawable/register2_spirit_button_a"
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:text="@string/next"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-smallcaps"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/register2_btncontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:textSize="13sp"
                    android:textColor="#ff3d3d"
                    android:layout_gravity="center"
                    android:id="@+id/register2_back"
                    android:background="#00000000"
                    android:layout_width="210dp"
                    android:layout_height="30dp"
                    android:text="@string/back"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-smallcaps"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
