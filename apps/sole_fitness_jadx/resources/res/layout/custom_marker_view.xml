<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="@dimen/chart_value_dot_margin2"
    android:layout_marginBottom="@dimen/chart_value_dot_margin">
    <TextView
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12dp"
        android:textColor="@color/light_gray"
        android:ellipsize="end"
        android:id="@+id/tvContent"
        android:paddingRight="@dimen/chart_value_dot_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="5dp"
        android:text=""
        android:singleLine="true"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/chart_dot"
        android:background="@drawable/cycle_dot_red"
        android:layout_width="@dimen/chart_value_dot_width"
        android:layout_height="@dimen/chart_value_dot_width"
        android:layout_below="@+id/tvContent"
        android:layout_alignRight="@+id/tvContent"/>
</RelativeLayout>
