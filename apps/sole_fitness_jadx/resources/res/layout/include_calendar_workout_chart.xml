<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnPre"
            android:background="@drawable/page_left_button"
            android:layout_width="@dimen/chart_btn_width"
            android:layout_height="@dimen/chart_btn_width"/>
        <TextView
            android:textSize="@dimen/chart_btn_title_size"
            android:textColor="@color/light_gray"
            android:gravity="center"
            android:id="@+id/preTitle"
            android:layout_width="@dimen/chart_btn_width"
            android:layout_height="wrap_content"
            android:text="Speed"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/infoLeftWrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/chart_info_text_size"
                android:textColor="@color/light_gray"
                android:gravity="start|bottom"
                android:id="@+id/infoLeft1"
                android:layout_width="@dimen/chart_info_text_width"
                android:layout_height="@dimen/chart_info_text_height"
                android:text="info1"/>
            <TextView
                android:textSize="@dimen/chart_info_text_size"
                android:textColor="@color/light_gray"
                android:gravity="top"
                android:id="@+id/infoLeft2"
                android:layout_width="@dimen/chart_info_text_width"
                android:layout_height="@dimen/chart_info_text_height"
                android:text="info2"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/infoCenterWrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <TextView
                android:textSize="@dimen/chart_info_text_size"
                android:textColor="@color/light_gray"
                android:gravity="bottom|center_horizontal"
                android:id="@+id/infoCenter1"
                android:layout_width="@dimen/chart_info_text_width"
                android:layout_height="@dimen/chart_info_text_height"
                android:text="infoCenter1"/>
            <TextView
                android:textSize="@dimen/chart_info_text_size"
                android:textColor="@color/light_gray"
                android:gravity="top|center_horizontal"
                android:id="@+id/infoCenter2"
                android:layout_width="@dimen/chart_info_text_width"
                android:layout_height="@dimen/chart_info_text_height"
                android:text="infoCenter2"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/infoLeftWrapper2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/chart_info_omron_btn_marginTop">
            <Button
                android:textSize="@dimen/chart_info_omron_btn_textSize"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/infoLeft3"
                android:background="@drawable/omron_sole_btn"
                android:layout_width="@dimen/chart_info_omron_btn_width"
                android:layout_height="@dimen/chart_info_omron_btn_height"
                android:text="infoLeft3"/>
            <TextView
                android:textSize="@dimen/chart_info_text_size2"
                android:textColor="@color/light_gray"
                android:gravity="top"
                android:id="@+id/infoLeft4"
                android:layout_width="@dimen/chart_info_text_width"
                android:layout_height="@dimen/chart_info_text_height"
                android:text="infoLeft4"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <TextView
                android:textSize="@dimen/chart_info_text_size"
                android:textColor="@color/light_gray"
                android:gravity="end|bottom"
                android:id="@+id/infoRight1"
                android:layout_width="@dimen/chart_info_text_width"
                android:layout_height="@dimen/chart_info_text_height"
                android:text="info1"/>
            <TextView
                android:textSize="@dimen/chart_info_text_size2"
                android:textColor="@color/light_gray"
                android:gravity="end|top"
                android:id="@+id/infoRight2"
                android:layout_width="@dimen/chart_info_text_width"
                android:layout_height="@dimen/chart_info_text_height"
                android:text="info2"/>
        </LinearLayout>
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/workoutChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/infoLeftWrapper"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnNext"
            android:background="@drawable/page_right_button"
            android:layout_width="@dimen/chart_btn_width"
            android:layout_height="@dimen/chart_btn_width"/>
        <TextView
            android:textSize="@dimen/chart_btn_title_size"
            android:textColor="@color/light_gray"
            android:gravity="center"
            android:id="@+id/nextTitle"
            android:layout_width="@dimen/chart_btn_width"
            android:layout_height="wrap_content"
            android:text="Speed"/>
    </LinearLayout>
</LinearLayout>
