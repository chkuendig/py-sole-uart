<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/register3_background_layout"
    android:background="@drawable/register3_sole_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:id="@+id/register3_main_layout"
        android:background="@drawable/signup_sole_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/register3_imageView"
            android:background="@drawable/register3_sole_leftpic"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/register3_content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="30sp"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:id="@+id/register3_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_body_info"/>
            <ImageView
                android:id="@+id/register3_stage_image"
                android:background="@drawable/register3_sole_stage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="13sp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/register3_height"
                android:background="@drawable/signup_sole_button_a"
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:hint="@string/login_height"
                android:ems="10"
                android:inputType="text"/>
            <TextView
                android:textSize="13sp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/register3_weight"
                android:background="@drawable/signup_sole_button_a"
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:hint="@string/login_weight"
                android:ems="10"
                android:inputType="text"/>
            <Button
                android:textSize="13sp"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:id="@+id/register3_done"
                android:background="@drawable/signup_sole_button_c0"
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:text="@string/done"
                android:textAllCaps="false"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/register3_btncontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:textSize="13sp"
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:id="@+id/register3_back"
                    android:background="#00000000"
                    android:layout_width="210dp"
                    android:layout_height="30dp"
                    android:text="@string/back"
                    android:textAllCaps="false"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <com.dyaco.sole.custom_view.ErrorDialog
        android:id="@+id/errorDialog"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.dyaco.sole.custom_view.QuestMainView
        android:id="@+id/questMainView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
