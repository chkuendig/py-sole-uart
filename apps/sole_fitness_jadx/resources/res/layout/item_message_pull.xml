<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="@dimen/mess_height">
            <ImageView
                android:id="@+id/iconIsRead"
                android:layout_width="@dimen/mess_isRead_icon_height"
                android:layout_height="@dimen/mess_isRead_icon_height"
                android:src="@drawable/message_alert_icon"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <TextView
            android:textSize="@dimen/mess_text_size"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@+id/dateMess"
            android:layout_width="@dimen/mess_width"
            android:layout_height="@dimen/mess_height"
            android:layout_weight="2"/>
        <TextView
            android:textSize="@dimen/mess_text_size"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@+id/timeMess"
            android:layout_width="@dimen/mess_width"
            android:layout_height="@dimen/mess_height"
            android:layout_weight="1"/>
        <TextView
            android:textSize="@dimen/mess_text_size"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@+id/subjectMess"
            android:layout_width="@dimen/mess_width"
            android:layout_height="@dimen/mess_height"
            android:layout_weight="8"/>
    </LinearLayout>
    <View
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>
