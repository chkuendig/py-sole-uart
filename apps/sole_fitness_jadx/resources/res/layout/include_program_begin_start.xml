<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">
        <TextView
            android:textSize="@dimen/profiles_info_text_size"
            android:textColor="@color/light_gray"
            android:id="@+id/begin_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="@string/begin"
            android:layout_marginStart="5dp"/>
        <TextView
            android:textSize="@dimen/user_text_size"
            android:textColor="@color/light_gray"
            android:gravity="center"
            android:id="@+id/setting_start_textview"
            android:background="@drawable/all_btn_a_01"
            android:layout_width="@dimen/profiles_number_bg_width"
            android:layout_height="@dimen/profiles_number_bg_height"
            android:text="@string/start"
            android:layout_below="@+id/begin_textview"/>
    </RelativeLayout>
</LinearLayout>
