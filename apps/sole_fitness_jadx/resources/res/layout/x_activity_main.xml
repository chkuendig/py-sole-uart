<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/s_title_layout"
        android:background="@drawable/x_all_title_a_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/s_main_menu_item_height">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <com.dyaco.sole.custom_view.TypefaceTextView
                android:textSize="@dimen/s_main_menu_text_size"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/menu_user_textview"
                android:paddingBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/s_menu_user_profile"
                android:maxLines="1"/>
            <ImageView
                android:id="@+id/s_menu_user_image"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginBottom="1dp"
                android:src="@color/white"
                android:layout_alignBottom="@+id/menu_user_textview"
                android:layout_centerHorizontal="true"
                android:layout_alignParentEnd="false"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/menu_programs_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <com.dyaco.sole.custom_view.TypefaceTextView
                android:textSize="@dimen/s_main_menu_text_size"
                android:textStyle="bold"
                android:textColor="@color/light_gray"
                android:gravity="center"
                android:id="@+id/menu_programs_textview"
                android:paddingBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/s_menu_program"
                android:maxLines="1"/>
            <ImageView
                android:id="@+id/s_menu_programs_image"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginBottom="1dp"
                android:src="@color/white"
                android:layout_alignBottom="@+id/menu_programs_textview"
                android:layout_centerHorizontal="true"
                android:layout_alignParentEnd="false"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <com.dyaco.sole.custom_view.TypefaceTextView
                android:textSize="@dimen/s_main_menu_text_size"
                android:textStyle="bold"
                android:textColor="@color/light_gray"
                android:gravity="center"
                android:id="@+id/menu_display_textview"
                android:paddingBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/menu_display"
                android:maxLines="1"/>
            <ImageView
                android:id="@+id/s_menu_display_image"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginBottom="1dp"
                android:src="@color/white"
                android:layout_alignBottom="@+id/menu_display_textview"
                android:layout_centerHorizontal="true"
                android:layout_alignParentEnd="false"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <com.dyaco.sole.custom_view.TypefaceTextView
                android:textSize="@dimen/s_main_menu_text_size"
                android:textStyle="italic|bold"
                android:textColor="@color/light_gray"
                android:gravity="center"
                android:id="@+id/menu_calendar_textview"
                android:paddingBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/menu_calendar"
                android:maxLines="1"/>
            <ImageView
                android:id="@+id/s_menu_calendar_image"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginBottom="1dp"
                android:src="@color/white"
                android:layout_alignBottom="@+id/menu_calendar_textview"
                android:layout_centerHorizontal="true"
                android:layout_alignParentEnd="false"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/s_title_layout">
        <ImageView
            android:id="@+id/menu_logo_imageview"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/main_title_height"
            android:layout_marginTop="@dimen/s_main_logo_margin_top"
            android:src="@drawable/x_all_logo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_title_icon_margin_top"
            android:layout_alignTop="@+id/menu_logo_imageview"
            android:layout_alignParentStart="true">
            <ImageView
                android:id="@+id/menu_connect_imageview"
                android:layout_width="@dimen/main_title_icon_size0"
                android:layout_height="@dimen/main_title_icon_size0"
                android:src="@drawable/x_all_icon_a_ble_0"
                android:layout_marginStart="20dp"/>
            <ImageView
                android:id="@+id/menu_pull_message"
                android:layout_width="@dimen/main_title_icon_size"
                android:layout_height="@dimen/main_title_icon_size"
                android:src="@drawable/nomessage_icon_color"
                android:layout_marginStart="20dp"/>
            <ImageView
                android:id="@+id/menuQrCode"
                android:visibility="gone"
                android:layout_width="@dimen/main_title_icon_size"
                android:layout_height="@dimen/main_title_icon_size"
                android:src="@drawable/btn_qrcode_b"
                android:layout_marginStart="20dp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/menu_goal_imageview"
            android:visibility="visible"
            android:layout_width="@dimen/main_title_icon_size2"
            android:layout_height="@dimen/main_title_icon_size"
            android:src="@drawable/goal_other_goalbutton"
            android:layout_alignTop="@+id/menu_logo_imageview"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/menu_share_imageview"/>
        <ImageView
            android:id="@+id/menu_share_imageview"
            android:layout_width="@dimen/main_title_icon_size"
            android:layout_height="@dimen/main_title_icon_size"
            android:src="@drawable/s_all_btn_a_share"
            android:layout_alignTop="@+id/menu_logo_imageview"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/menu_alert_imageview"/>
        <ImageView
            android:id="@+id/menu_alert_imageview"
            android:visibility="gone"
            android:layout_width="@dimen/main_title_icon_size"
            android:layout_height="@dimen/main_title_icon_size"
            android:src="@drawable/goal_alert_icon_color"
            android:layout_alignTop="@+id/menu_logo_imageview"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/menu_language_imageview"/>
        <ImageView
            android:id="@+id/menu_language_imageview"
            android:layout_width="@dimen/main_title_icon_size"
            android:layout_height="@dimen/main_title_icon_size"
            android:src="@drawable/s_all_btn_a_zh_hant"
            android:layout_alignTop="@+id/menu_logo_imageview"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/s_main_content_margin_top"
        android:layout_marginBottom="@dimen/s_main_content_margin_bottom"
        android:layout_below="@+id/menu_layout"
        android:layout_alignParentBottom="true"/>
    <ImageView
        android:id="@+id/main_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/s_main_bottom_line"
        android:src="@drawable/x_all_bottom_1"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/link_layout"
        android:visibility="gone"
        android:layout_width="@dimen/display_link_layout_width"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="top|center_horizontal"
            android:orientation="vertical"
            android:background="@color/share_gray"
            android:layout_width="@dimen/display_link_content_width"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/link_fb_imageview"
                android:layout_width="@dimen/display_link_image_size"
                android:layout_height="@dimen/display_link_image_size"
                android:layout_marginTop="@dimen/display_link_image_margin"
                android:src="@drawable/calendar_icon_fb"/>
            <ImageView
                android:id="@+id/link_yt_imageview"
                android:layout_width="@dimen/display_link_image_size"
                android:layout_height="@dimen/display_link_image_size"
                android:layout_marginTop="@dimen/display_link_image_margin"
                android:src="@drawable/display_icon_yt"/>
            <ImageView
                android:id="@+id/link_tt_imageview"
                android:layout_width="@dimen/display_link_image_size"
                android:layout_height="@dimen/display_link_image_size"
                android:layout_marginTop="@dimen/display_link_image_margin"
                android:src="@drawable/calendar_icon_wt"/>
            <ImageView
                android:id="@+id/link_music_imageview"
                android:layout_width="@dimen/display_link_image_size"
                android:layout_height="@dimen/display_link_image_size"
                android:layout_marginTop="@dimen/display_link_image_margin"
                android:src="@drawable/display_icon_it"/>
            <ImageView
                android:id="@+id/link_sfr_imageview"
                android:layout_width="@dimen/display_link_image_size"
                android:layout_height="@dimen/display_link_image_size"
                android:layout_marginTop="@dimen/display_link_image_margin"
                android:src="@drawable/display_icon_browse"/>
            <ImageView
                android:id="@+id/link_mail_imageview"
                android:layout_width="@dimen/display_link_image_size"
                android:layout_height="@dimen/display_link_image_size"
                android:layout_marginTop="@dimen/display_link_image_margin"
                android:src="@drawable/display_icon_mail"/>
        </LinearLayout>
        <View
            android:background="@color/s_share_blue"
            android:layout_width="5dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="@dimen/display_link_arrow_layout_width"
            android:layout_height="@dimen/display_link_arrow_layout_height">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/link_arrow_imageview"
                android:layout_width="@dimen/display_link_arrow_image_width"
                android:layout_height="wrap_content"
                android:src="@drawable/s_display_arrow_a_0"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
