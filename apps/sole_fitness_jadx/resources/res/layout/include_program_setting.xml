<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">
        <com.dyaco.sole.custom_view.TypefaceTextView
            android:textSize="@dimen/profiles_info_text_size"
            android:textColor="@color/light_gray"
            android:id="@+id/setting_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="@string/level"
            android:layout_marginStart="5dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/setting_bg_layout"
            android:background="@drawable/all_item"
            android:layout_width="@dimen/profiles_number_bg_width"
            android:layout_height="@dimen/profiles_number_bg_height"
            android:layout_below="@+id/setting_title_textview">
            <com.dyaco.sole.custom_view.LongClickRepeatButton
                android:id="@+id/setting_up_button"
                android:background="@color/transparent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/all_item_a_btn_1"
                android:scaleType="fitCenter"
                android:layout_weight="0.4"/>
            <TextView
                android:textSize="@dimen/profiles_number_text_size"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/setting_number_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="0"
                android:layout_weight="1"/>
            <com.dyaco.sole.custom_view.LongClickRepeatButton
                android:id="@+id/setting_down_button"
                android:background="@color/transparent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/all_item_a_btn_2"
                android:scaleType="fitCenter"
                android:layout_weight="0.4"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
