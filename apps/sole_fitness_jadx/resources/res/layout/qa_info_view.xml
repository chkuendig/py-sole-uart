<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/qa_img"
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_height="@dimen/qa_info_height"
            android:src="@drawable/qa_icon_question"
            android:layout_weight="1"/>
        <TextView
            android:textSize="@dimen/qa_info_text"
            android:textColor="#ffffff"
            android:layout_gravity="center_vertical"
            android:id="@+id/qa_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            android:text=""
            android:layout_weight="3.8"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="@dimen/qa_info_margin">
        <ImageView
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_height="@dimen/qa_info_height"
            android:src="@drawable/qa_icon_answer"
            android:layout_weight="1"/>
        <TextView
            android:textSize="@dimen/qa_info_text"
            android:textColor="#ababab"
            android:layout_gravity="center_vertical"
            android:id="@+id/answer_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            android:text=""
            android:layout_weight="3.8"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"/>
    </LinearLayout>
</LinearLayout>
