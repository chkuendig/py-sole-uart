<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/light_gray2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@color/transparent"
        android:paddingTop="@dimen/calendar_title_bar_padding"
        android:paddingBottom="@dimen/calendar_title_bar_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/calendar_prev_textview"
            android:layout_width="@dimen/calendar_title_button_size"
            android:layout_height="@dimen/calendar_title_button_size"
            android:src="@drawable/s_all_btn_a_arrow_l"
            android:layout_toStartOf="@+id/calendar_title_textview"/>
        <com.dyaco.sole.custom_view.TypefaceTextView
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/calendar_title_textview"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="current date"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/calendar_next_textview"
            android:layout_width="@dimen/calendar_title_button_size"
            android:layout_height="@dimen/calendar_title_button_size"
            android:src="@drawable/s_all_btn_a_arrow_r"
            android:layout_toEndOf="@+id/calendar_title_textview"/>
        <ImageView
            android:id="@+id/totalchart"
            android:layout_width="@dimen/calendar_title_button_size"
            android:layout_height="@dimen/calendar_title_button_size"
            android:src="@drawable/chart_icon_b"
            android:layout_alignParentRight="false"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>
