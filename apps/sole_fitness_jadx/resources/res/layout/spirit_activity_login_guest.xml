<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/guest_background_layout"
    android:background="@drawable/guest_spirit_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:id="@+id/guest_main_layout"
        android:background="@drawable/guest_spirit_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/guest_imageView"
            android:background="@drawable/guest_spirit_leftpic"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/guest_content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="30sp"
                android:textColor="#444444"
                android:layout_gravity="center"
                android:id="@+id/guest_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/guest"/>
            <TextView
                android:textSize="13sp"
                android:textColor="#444444"
                android:textColorHint="#444444"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/guest_height"
                android:background="@drawable/guest_spirit_textbox"
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:hint="@string/login_height"
                android:ems="10"
                android:inputType="text"/>
            <TextView
                android:textSize="13sp"
                android:textColor="#444444"
                android:textColorHint="#444444"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/register3_weight"
                android:background="@drawable/guest_spirit_textbox"
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:hint="@string/login_weight"
                android:ems="10"
                android:inputType="text"/>
            <Button
                android:textSize="13sp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:id="@+id/guest_done"
                android:background="@drawable/guest_spirit_button_a"
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:text="@string/done"
                android:textAllCaps="false"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/guest_btncontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:textSize="13sp"
                    android:textColor="#ff3d3d"
                    android:layout_gravity="center"
                    android:id="@+id/guest_back"
                    android:background="#00000000"
                    android:layout_width="210dp"
                    android:layout_height="30dp"
                    android:text="@string/back"
                    android:textAllCaps="false"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
