<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_custom_record"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/btnBack0"
        android:background="@drawable/outdoor_button_back"
        android:layout_width="@dimen/outdoor_btn_back_width"
        android:layout_height="@dimen/outdoor_btn_back_width"
        android:text=""/>
    <RelativeLayout
        android:id="@+id/sportTypeSettingLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/outdoor_sportTypeSettingLayout_height"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/btnBack0"
        android:layout_centerHorizontal="true">
        <include layout="@layout/sport_type_setting_layout"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/startDateTime"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/sportTypeSettingLayout">
        <TextView
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/startDateTime_title"
            android:textAlignment="textEnd"
            style="@style/sport_text_view_color"/>
        <EditText
            android:enabled="true"
            android:textSize="24sp"
            android:textColorHint="#cccccc"
            android:id="@+id/etStartDateTime"
            android:background="@drawable/rect_trainsparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:hint=""
            android:inputType="datetime"
            android:textAlignment="textEnd"
            style="@style/sport_text_view_color"/>
    </LinearLayout>
    <View
        android:id="@+id/pos"
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:layout_below="@+id/sportTypeSettingLayout"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/duration"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/pos"
        android:layout_below="@+id/sportTypeSettingLayout">
        <TextView
            android:textSize="14sp"
            android:id="@+id/tvDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/duration_title"
            android:textAlignment="textEnd"
            style="@style/sport_text_view_color"/>
        <EditText
            android:textSize="36sp"
            android:textColorHint="#cccccc"
            android:id="@+id/tvDurationValue"
            android:background="@drawable/rect_trainsparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="1:35"
            android:inputType="time"
            android:textAlignment="textEnd"
            style="@style/sport_text_view_color"/>
    </LinearLayout>
    <TextView
        android:textSize="14sp"
        android:id="@+id/unit_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/duration_unit2"
        android:layout_below="@+id/duration"
        android:layout_alignRight="@+id/duration"
        android:textAlignment="textEnd"
        style="@style/sport_text_view_color"/>
    <TextView
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text="@string/duration_unit3"
        android:layout_toLeftOf="@+id/unit_min"
        android:layout_below="@+id/duration"
        android:textAlignment="textEnd"
        style="@style/sport_text_view_color"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/tvDistance"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/startDateTime">
        <TextView
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/distance_title"
            android:textAlignment="textEnd"
            style="@style/sport_text_view_color"/>
        <EditText
            android:textSize="36sp"
            android:textColorHint="#cccccc"
            android:id="@+id/tvDistanceValue"
            android:background="@drawable/rect_trainsparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="5.3"
            android:inputType="numberDecimal"
            android:textAlignment="textEnd"
            style="@style/sport_text_view_color"/>
        <TextView
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/distance_unit"
            android:textAlignment="textEnd"
            style="@style/sport_text_view_color"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/calorie_wrapper"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/unit_min"
        android:layout_alignLeft="@+id/duration">
        <TextView
            android:textSize="14sp"
            android:textColor="#999999"
            android:id="@+id/tvCalorieTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calorie_title"
            android:layout_alignParentRight="true"/>
        <TextView
            android:textSize="36sp"
            android:textColor="#999999"
            android:id="@+id/tvCalorieValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="00"
            android:layout_below="@+id/tvCalorieTitle"
            android:layout_alignParentRight="true"/>
        <TextView
            android:textSize="14sp"
            android:textColor="#999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calorie_unit"
            android:layout_below="@+id/tvCalorieValue"
            android:layout_alignParentRight="true"
            style="@style/sport_text_view_color"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/btnWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <Button
            android:textSize="@dimen/outdoor_custom_record_btn_text_size"
            android:id="@+id/btnBack"
            android:background="@drawable/rect_corner_red"
            android:layout_width="@dimen/outdoor_custom_record_btn_width"
            android:layout_height="@dimen/outdoor_custom_record_btn_height"
            android:layout_marginRight="5dp"
            android:text="@string/sport_back"
            android:layout_weight="1"
            style="@style/sportControlBtn"/>
        <Button
            android:textSize="@dimen/outdoor_custom_record_btn_text_size"
            android:id="@+id/btnSave"
            android:background="@drawable/rect_corner_orange"
            android:layout_width="@dimen/outdoor_custom_record_btn_width"
            android:layout_height="@dimen/outdoor_custom_record_btn_height"
            android:layout_marginLeft="5dp"
            android:text="@string/sport_save"
            android:layout_weight="1"
            style="@style/sportControlBtn"/>
    </LinearLayout>
    <Button
        android:background="@drawable/outdoor_button_output"
        android:layout_width="@dimen/outdoor_music_icon_width"
        android:layout_height="@dimen/outdoor_music_icon_width"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/btnWrapper"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
