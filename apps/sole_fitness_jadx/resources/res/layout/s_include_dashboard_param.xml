<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/icon_image"
                android:layout_width="@dimen/s_display_simple_icon_size"
                android:layout_height="wrap_content"
                android:src="@drawable/s_display_icon_a_hr"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/s_display_simple_image_margin"
                android:layout_alignParentStart="true"/>
            <TextView
                android:textSize="@dimen/s_display_simple_number_text_size"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/value_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:maxLines="1"
                android:layout_centerInParent="true"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/unit_layout"
                android:visibility="gone"
                android:layout_width="@dimen/s_display_track_unit_image_size"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/value_text">
                <com.dyaco.sole.custom_view.TypefaceTextView
                    android:textSize="@dimen/s_display_track_unit_text_size"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@+id/unit_1_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/unit_mi_upper"/>
                <com.dyaco.sole.custom_view.TypefaceTextView
                    android:textSize="@dimen/s_display_track_unit_text_size"
                    android:textColor="@color/light_gray1"
                    android:gravity="center"
                    android:id="@+id/unit_2_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/unit_km_upper"/>
            </LinearLayout>
        </RelativeLayout>
        <com.dyaco.sole.custom_view.TypefaceTextView
            android:textSize="@dimen/s_display_simple_item_text_size"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/title_text"
            android:background="@color/light_gray2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="HEART RATE"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
