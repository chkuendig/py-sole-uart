<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/guest_edituser_background_layout"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/guest_edituser_main_layout"
        android:background="@drawable/edituser_sole_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/guest_edituser_contentlinearlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/guest_edituser_title_image"
                android:background="@drawable/edituser_sole_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/edit_profile_text_size2"
                android:textColor="#000"
                android:layout_gravity="center"
                android:id="@+id/guest_edituser_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_profile"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/edit_profile_text_size"
                    android:id="@+id/guest_edituser_account_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account Name"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/edittext1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/edit_profile_text_size"
                    android:textColor="#000"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/guest_edituser_height"
                    android:background="@drawable/edituser_sole_button_a"
                    android:layout_width="210dp"
                    android:layout_height="30dp"
                    android:hint="@string/login_height"
                    android:ems="10"
                    android:inputType="text"/>
                <TextView
                    android:textSize="@dimen/edit_profile_text_size"
                    android:textColor="#000"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/guest_edituser_weight"
                    android:background="@drawable/edituser_sole_button_a"
                    android:layout_width="210dp"
                    android:layout_height="30dp"
                    android:hint="@string/weight_hint"
                    android:ems="10"
                    android:inputType="text"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/edittext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:textSize="@dimen/edit_profile_text_size"
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:id="@+id/edituser_cancel"
                    android:background="@drawable/edituser_sole_button_d0"
                    android:layout_width="210dp"
                    android:layout_height="30dp"
                    android:text="@string/cancel"/>
                <Button
                    android:textSize="@dimen/edit_profile_text_size"
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:id="@+id/edituser_save"
                    android:background="@drawable/edituser_sole_button_c0"
                    android:layout_width="210dp"
                    android:layout_height="30dp"
                    android:text="@string/save"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
