<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/dark_gray4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/button_a_02_shake"
        android:layout_width="@dimen/connection_bg_width"
        android:layout_height="@dimen/connection_bg_height">
        <TextView
            android:textSize="@dimen/connection_title_text_size"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/connection_title_textview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/connection_title_height"
            android:text="@string/target_calories"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/connection_line"
            android:layout_below="@+id/connection_title_textview"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">
            <com.dyaco.sole.custom_view.custom_wheel.UnitNumberPicker
                android:id="@+id/picker1"
                android:layout_width="@dimen/s_calorie_text_width"
                android:layout_height="match_parent"
                style="@style/NumberPicker"/>
            <com.dyaco.sole.custom_view.custom_wheel.UnitNumberPicker
                android:id="@+id/picker2"
                android:layout_width="@dimen/s_calorie_text_width"
                android:layout_height="match_parent"
                style="@style/NumberPicker"/>
            <com.dyaco.sole.custom_view.custom_wheel.UnitNumberPicker
                android:id="@+id/picker3"
                android:layout_width="@dimen/s_calorie_text_width"
                android:layout_height="match_parent"
                app:middleTextColor="@color/white"
                style="@style/NumberPicker"/>
        </LinearLayout>
        <View
            android:id="@+id/connection_line"
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/connection_bottom_layout"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/connection_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/connection_bottom_height"
            android:layout_alignParentBottom="true">
            <TextView
                android:textSize="@dimen/connection_title_text_size"
                android:textColor="@color/light_gray"
                android:gravity="center"
                android:id="@+id/cancel_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/cancel"
                android:layout_weight="1"/>
            <View
                android:background="@color/light_gray"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <TextView
                android:textSize="@dimen/connection_title_text_size"
                android:textColor="@color/light_gray"
                android:gravity="center"
                android:id="@+id/confirm_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/confirm"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
