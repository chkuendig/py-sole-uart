<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/display_bottom_layout"
        android:layout_alignParentTop="true"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/display_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/display_bottom_height"
        android:layout_marginBottom="@dimen/display_bottom_margin_bottom"
        android:baselineAligned="false"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@+id/display_stop_layout"
            android:background="@drawable/display_btn"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="12dp">
            <TextView
                android:textSize="@dimen/display_bottom_text_size"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/stop"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/display_btn_icon_a_stop"
                android:layout_marginStart="5dp"/>
        </LinearLayout>
        <com.dyaco.sole.custom_view.TypefaceTextView
            android:textSize="@dimen/display_bottom_text_size"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/display_simple_textview"
            android:background="@drawable/all_btn_a_02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/simple"
            android:layout_weight="1"/>
        <com.dyaco.sole.custom_view.TypefaceTextView
            android:textSize="@dimen/display_bottom_text_size"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/display_track_textview"
            android:background="@drawable/all_btn_a_02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/track"
            android:layout_weight="1"
            android:layout_marginStart="8dp"/>
        <com.dyaco.sole.custom_view.TypefaceTextView
            android:textSize="@dimen/display_bottom_text_size"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/display_dashboard_textview"
            android:background="@drawable/all_btn_a_02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/dashboard"
            android:layout_weight="1"
            android:layout_marginStart="8dp"/>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@+id/display_pause_layout"
            android:background="@drawable/display_btn"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="12dp">
            <TextView
                android:textSize="@dimen/display_bottom_text_size"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/display_pause_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/pause"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/display_pause_imageview"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/display_btn_icon_a_pause"
                android:layout_marginStart="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/loading_auto_connected"
        android:visibility="gone"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:indeterminateDrawable="@drawable/base_loading_large_anim"
        android:indeterminateBehavior="repeat"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
