<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:background="@drawable/all_title_a_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_title_bg_height"/>
        <ImageView
            android:id="@+id/menu_logo_imageview"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/main_title_height"
            android:layout_marginTop="12dp"
            android:src="@drawable/all_logo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/menu_end_imageview"
            android:layout_width="@dimen/main_title_icon_size"
            android:layout_height="@dimen/main_title_icon_size"
            android:layout_marginTop="20dp"
            android:src="@drawable/all_btn_b_delete"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_menu_item_margin_top"
            android:layout_marginStart="@dimen/main_menu_margin_start_end"
            android:layout_marginEnd="@dimen/main_menu_margin_start_end">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/main_menu_item_height"
                android:layout_weight="1">
                <com.dyaco.sole.custom_view.TypefaceTextView
                    android:textSize="@dimen/main_menu_text_size"
                    android:textStyle="italic|bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/menu_qa_textview1"
                    android:background="@drawable/all_title_a_display1"
                    android:layout_width="120dp"
                    android:layout_height="@dimen/main_menu_item_height"
                    android:maxLines="1"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/main_menu_item_height"
                android:layout_weight="1">
                <com.dyaco.sole.custom_view.TypefaceTextView
                    android:textSize="@dimen/main_menu_text_size"
                    android:textStyle="italic|bold"
                    android:textColor="@color/light_gray"
                    android:gravity="center"
                    android:id="@+id/menu_message_textview1"
                    android:layout_width="120dp"
                    android:layout_height="@dimen/main_menu_item_height"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_menu_item_margin_top"
            android:layout_marginStart="@dimen/main_menu_margin_start_end"
            android:layout_marginEnd="@dimen/main_menu_margin_start_end">
            <com.dyaco.sole.custom_view.TypefaceTextView
                android:textSize="@dimen/main_menu_text_size"
                android:textStyle="italic|bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/menu_qa_textview"
                android:layout_width="0dp"
                android:layout_height="@dimen/main_menu_item_height"
                android:text="@string/qa_title_qa"
                android:maxLines="1"
                android:layout_weight="1"/>
            <RelativeLayout
                android:layout_width="1dp"
                android:layout_height="match_parent">
                <TextView
                    android:background="#000000"
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <com.dyaco.sole.custom_view.TypefaceTextView
                android:textSize="@dimen/main_menu_text_size"
                android:textStyle="italic|bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/menu_message_textview"
                android:layout_width="0dp"
                android:layout_height="@dimen/main_menu_item_height"
                android:text="@string/qa_title_message"
                android:maxLines="1"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/menu_layout">
        <ScrollView
            android:id="@+id/qa_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/showmessage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </ScrollView>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/sendBar"
            android:background="#cdcdcd"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_weight="1">
            <EditText
                android:id="@+id/qa_edit"
                android:background="@drawable/edit_input_back"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:hint="Your question message..."
                android:layout_weight="8"/>
            <ImageView
                android:id="@+id/photo_send"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:src="@drawable/qa_btn_message_camera"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/qa_send"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/qa_btn_message_send"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/showImg"
        android:background="#000000"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/closeImg"
            android:layout_width="@dimen/main_title_icon_size"
            android:layout_height="@dimen/main_title_icon_size"
            android:layout_marginTop="20dp"
            android:src="@drawable/img_cancel"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:elevation="5dp"/>
        <ImageView
            android:id="@+id/setImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
</RelativeLayout>
