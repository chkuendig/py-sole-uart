<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/connection_item_text_size"
        android:textColor="@color/light_gray"
        android:ellipsize="middle"
        android:gravity="start|center_vertical"
        android:id="@+id/item_name_textview"
        android:layout_width="0dp"
        android:layout_height="@dimen/connection_item_height"
        android:text="Device name 1"
        android:singleLine="true"
        android:layout_weight="1"/>
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/item_selected_imageview"
        android:visibility="gone"
        android:layout_width="@dimen/connection_item_selected_size"
        android:layout_height="@dimen/connection_item_selected_size"
        android:src="@drawable/all_btn_a_hook"/>
</LinearLayout>
