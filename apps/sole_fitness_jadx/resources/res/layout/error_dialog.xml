<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#aa000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/error_dialog_width"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@drawable/qa_text_back"
            android:paddingTop="@dimen/error_dialog_padding_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/error_dialog_img_height_01"
                android:src="@drawable/qa_alerts_icon_warning"/>
            <TextView
                android:textSize="@dimen/error_dialog_text_01"
                android:textStyle="italic|bold"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Warning"/>
            <TextView
                android:textSize="@dimen/error_dialog_text_02"
                android:textColor="#262626"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/errorMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ERROR"
                android:maxLines="2"/>
            <TextView
                android:textSize="@dimen/error_dialog_text_02"
                android:textColor="@color/red"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/downloadAppMsg"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"/>
            <View
                android:background="#696969"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/error_dialog_margin_01"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/helpCenter"
                    android:background="@drawable/error_dialog_left_btn"
                    android:paddingTop="@dimen/error_dialog_padding_02"
                    android:paddingBottom="@dimen/error_dialog_padding_02"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/error_dialog_img_height_02"
                        android:src="@drawable/qa_icon_message_csr"/>
                    <TextView
                        android:textSize="@dimen/error_dialog_text_03"
                        android:textColor="#ffffff"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Help center"
                        android:maxLines="1"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/appDownload"
                    android:background="@drawable/error_dialog_left_btn"
                    android:paddingTop="@dimen/error_dialog_padding_02"
                    android:paddingBottom="@dimen/error_dialog_padding_02"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/error_dialog_img_height_02"
                        android:src="@drawable/ic_action_file_download"
                        android:tint="@android:color/white"/>
                    <TextView
                        android:textSize="@dimen/error_dialog_text_03"
                        android:textColor="@android:color/white"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/download_app"
                        android:maxLines="1"/>
                </LinearLayout>
                <View
                    android:background="#696969"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/close"
                    android:background="@drawable/error_dialog_right_btn"
                    android:paddingTop="@dimen/error_dialog_padding_02"
                    android:paddingBottom="@dimen/error_dialog_padding_02"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/error_dialog_img_height_02"
                        android:src="@drawable/qa_alerts_icon_close"/>
                    <TextView
                        android:textSize="@dimen/error_dialog_text_03"
                        android:textColor="#696969"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/close"
                        android:maxLines="1"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
