<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:id="@+id/track_layout"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="14dp">
    <com.dyaco.sole.fragment.display.DisplayTrackView
        android:id="@+id/display_track_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/display_track_layout_margin"
        android:layout_marginRight="@dimen/display_track_leftright_margin"
        android:layout_marginBottom="@dimen/display_track_layout_margin"
        android:layout_toStartOf="@+id/track_horizontal_left_line">
        <include
            android:gravity="end|center_vertical"
            android:id="@+id/left_top_control_include"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/display_track_control_margin"
            layout="@layout/include_display_control"/>
        <LinearLayout
            android:gravity="end|center_vertical"
            android:orientation="horizontal"
            android:id="@+id/track_left_top_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">
                <ImageView
                    android:id="@+id/track_left_top_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.dyaco.sole.custom_view.TypefaceTextView
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/track_left_top_title_textview"
                    android:layout_width="@dimen/display_track_number_width"
                    android:layout_height="wrap_content"
                    android:lines="1"/>
            </LinearLayout>
            <com.dyaco.sole.custom_view.TypefaceTextView
                android:textColor="@color/display_number_blue"
                android:gravity="center"
                android:id="@+id/track_left_top_number_textview"
                android:layout_width="@dimen/display_track_number_width"
                android:layout_height="match_parent"
                android:text="0"
                android:lines="1"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="end|center_vertical"
            android:orientation="horizontal"
            android:id="@+id/track_left_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp">
                <com.dyaco.sole.custom_view.TypefaceTextView
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/track_left_bottom_title_textview"
                    android:layout_width="@dimen/display_track_number_width"
                    android:layout_height="wrap_content"
                    android:lines="1"/>
                <ImageView
                    android:id="@+id/track_left_bottom_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <com.dyaco.sole.custom_view.TypefaceTextView
                android:textColor="@color/display_number_blue"
                android:gravity="center"
                android:id="@+id/track_left_bottom_number_textview"
                android:layout_width="@dimen/display_track_number_width"
                android:layout_height="match_parent"
                android:text="0"
                android:lines="1"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/track_horizontal_left_line"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_toStartOf="@+id/track_minute_layout"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/track_minute_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/track_horizontal_center_line">
        <com.dyaco.sole.custom_view.TypefaceTextView
            android:textSize="@dimen/track_minute_textview_textSize"
            android:textColor="@color/display_number_blue"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/track_minute_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="  0"
            android:lines="1"/>
    </LinearLayout>
    <View
        android:id="@+id/track_horizontal_center_line"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/track_seconds_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/track_horizontal_center_line">
        <com.dyaco.sole.custom_view.TypefaceTextView
            android:textSize="@dimen/track_minute_textview_textSize"
            android:textColor="@color/display_number_blue"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/track_seconds_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="00"
            android:lines="1"/>
    </LinearLayout>
    <View
        android:id="@+id/track_horizontal_right_line"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@+id/track_seconds_layout"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/display_track_leftright_margin"
        android:layout_marginTop="@dimen/display_track_layout_margin"
        android:layout_marginBottom="@dimen/display_track_layout_margin"
        android:layout_toEndOf="@+id/track_horizontal_right_line">
        <include
            android:gravity="start|center_vertical"
            android:id="@+id/right_top_control_include"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/display_track_control_margin"
            layout="@layout/include_display_control"/>
        <LinearLayout
            android:gravity="start|center_vertical"
            android:orientation="horizontal"
            android:id="@+id/track_right_top_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <com.dyaco.sole.custom_view.TypefaceTextView
                android:textColor="@color/display_number_blue"
                android:gravity="center"
                android:id="@+id/track_right_top_number_textview"
                android:layout_width="@dimen/display_track_number_width"
                android:layout_height="match_parent"
                android:text="0"
                android:lines="1"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">
                <ImageView
                    android:id="@+id/track_right_top_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.dyaco.sole.custom_view.TypefaceTextView
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/track_right_top_title_textview"
                    android:layout_width="@dimen/display_track_number_width"
                    android:layout_height="wrap_content"
                    android:lines="1"/>
            </LinearLayout>
        </LinearLayout>
        <include
            android:gravity="start|center_vertical"
            android:id="@+id/right_bottom_control_include"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/display_track_control_margin"
            layout="@layout/include_display_control"/>
        <LinearLayout
            android:gravity="start|center_vertical"
            android:orientation="horizontal"
            android:id="@+id/track_right_bottom_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <com.dyaco.sole.custom_view.TypefaceTextView
                android:textColor="@color/display_number_blue"
                android:gravity="center"
                android:id="@+id/track_right_bottom_number_textview"
                android:layout_width="@dimen/display_track_number_width"
                android:layout_height="match_parent"
                android:text="0"
                android:lines="1"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp">
                <com.dyaco.sole.custom_view.TypefaceTextView
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/track_right_bottom_title_textview"
                    android:layout_width="@dimen/display_track_number_width"
                    android:layout_height="wrap_content"
                    android:lines="1"/>
                <ImageView
                    android:id="@+id/track_right_bottom_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
