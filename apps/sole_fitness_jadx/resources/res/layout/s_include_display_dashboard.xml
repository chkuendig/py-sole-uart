<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <RelativeLayout
            android:id="@+id/dashboard_left_layout"
            android:layout_width="@dimen/s_display_dashboard_width_s"
            android:layout_height="@dimen/s_display_dashboard_height_s"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/s_display_dashboard_margin"
            android:layout_toStartOf="@+id/dashboard_center_layout">
            <com.dyaco.sole.fragment.display.S_DisplayDashboardView
                android:id="@+id/dashboard_left_view"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <com.dyaco.sole.fragment.display.X_DisplayDashboardView
                android:id="@+id/x_dashboard_left_view"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp">
                <ImageView
                    android:id="@+id/dashboard_left_title_image"
                    android:layout_width="@dimen/s_display_simple_icon_size"
                    android:layout_height="@dimen/s_display_simple_icon_size"
                    android:src="@drawable/s_display_icon_a_hr"/>
                <TextView
                    android:textSize="@dimen/s_display_simple_number_text_size"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@+id/dashboard_left_value_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginStart="6dp"/>
            </LinearLayout>
            <com.dyaco.sole.custom_view.TypefaceTextView
                android:textSize="@dimen/s_display_simple_item_text_size"
                android:textColor="@color/white"
                android:gravity="bottom|center_horizontal"
                android:id="@+id/dashboard_left_title_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/s_display_dashboard_margin_bottom"
                android:text="INCLINE"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/dashboard_right_layout"
            android:layout_width="@dimen/s_display_dashboard_width_s"
            android:layout_height="@dimen/s_display_dashboard_height_s"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/s_display_dashboard_margin"
            android:layout_toEndOf="@+id/dashboard_center_layout">
            <com.dyaco.sole.fragment.display.S_DisplayDashboardView
                android:id="@+id/dashboard_right_view"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <com.dyaco.sole.fragment.display.X_DisplayDashboardView
                android:id="@+id/x_dashboard_right_view"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/dashboard_right_click_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp">
                <TextView
                    android:textSize="@dimen/s_display_simple_number_text_size"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@+id/dashboard_right_value_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"/>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/unit_layout"
                    android:visibility="gone"
                    android:layout_width="@dimen/s_display_track_unit_image_size"
                    android:layout_height="match_parent"
                    android:layout_marginStart="-4dp"
                    android:layout_marginEnd="-10dp">
                    <com.dyaco.sole.custom_view.TypefaceTextView
                        android:textSize="@dimen/s_display_track_unit_text_size"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:id="@+id/unit_1_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/unit_mi_upper"/>
                    <com.dyaco.sole.custom_view.TypefaceTextView
                        android:textSize="@dimen/s_display_track_unit_text_size"
                        android:textColor="@color/light_gray1"
                        android:gravity="center"
                        android:id="@+id/unit_2_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/unit_km_upper"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/dashboard_right_title_image"
                    android:layout_width="@dimen/s_display_simple_icon_size"
                    android:layout_height="@dimen/s_display_simple_icon_size"
                    android:src="@drawable/s_display_icon_a_hr"
                    android:layout_marginStart="6dp"/>
            </LinearLayout>
            <com.dyaco.sole.custom_view.TypefaceTextView
                android:textSize="@dimen/s_display_simple_item_text_size"
                android:textColor="@color/white"
                android:gravity="bottom|center_horizontal"
                android:id="@+id/dashboard_right_title_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/s_display_dashboard_margin_bottom"
                android:text="INCLINE"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/dashboard_center_layout"
            android:layout_width="@dimen/s_display_dashboard_width_m"
            android:layout_height="@dimen/s_display_dashboard_height_m"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">
            <com.dyaco.sole.fragment.display.S_DisplayDashboardView
                android:id="@+id/dashboard_center_view"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <com.dyaco.sole.fragment.display.X_DisplayDashboardView
                android:id="@+id/x_dashboard_center_view"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:textSize="@dimen/s_display_dashboard_time_text_size"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/dashboard_center_value_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:text="00:00"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
                <ImageView
                    android:layout_width="@dimen/s_display_simple_icon_size"
                    android:layout_height="@dimen/s_display_simple_icon_size"
                    android:src="@drawable/s_display_icon_a_time"/>
                <com.dyaco.sole.custom_view.TypefaceTextView
                    android:textSize="@dimen/s_display_simple_item_text_size"
                    android:textColor="@color/white"
                    android:gravity="bottom|center_horizontal"
                    android:id="@+id/dashboard_center_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time_elapsed"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@+id/line"
        android:background="@color/spirit_program_red"
        android:layout_width="match_parent"
        android:layout_height="@dimen/s_display_dashboard_line_height"/>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:id="@+id/bottom_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/s_display_dashboard_bottom_layout_height"
        android:layout_marginTop="@dimen/s_display_dashboard_bottom_margin"
        android:layout_marginBottom="@dimen/s_display_dashboard_bottom_margin">
        <include
            android:id="@+id/param1_include"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            layout="@layout/s_include_dashboard_param"/>
        <View
            android:background="@color/dark_gray"
            android:layout_width="2dp"
            android:layout_height="match_parent"/>
        <include
            android:id="@+id/param2_include"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            layout="@layout/s_include_dashboard_param"/>
        <View
            android:background="@color/dark_gray"
            android:layout_width="2dp"
            android:layout_height="match_parent"/>
        <include
            android:id="@+id/param3_include"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            layout="@layout/s_include_dashboard_param"/>
        <View
            android:id="@+id/param3_line"
            android:background="@color/dark_gray"
            android:layout_width="2dp"
            android:layout_height="match_parent"/>
        <include
            android:id="@+id/param4_include"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            layout="@layout/s_include_dashboard_param"/>
        <View
            android:background="@color/dark_gray"
            android:layout_width="2dp"
            android:layout_height="match_parent"/>
        <include
            android:id="@+id/param5_include"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            layout="@layout/s_include_dashboard_param"/>
    </LinearLayout>
</LinearLayout>
