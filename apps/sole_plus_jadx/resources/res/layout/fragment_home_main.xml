<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/fragment_home_main_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/statusBarHeight"
        android:background="@color/colorBackground_canvas"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:background="@color/colorBackground_canvas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statusBarHeight">
        <com.google.android.material.appbar.AppBarLayout
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:id="@+id/appBarLayout"
            android:background="@color/colorBackground_canvas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:background="@color/colorBackground_canvas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="exitUntilCollapsed|scroll">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="60dp">
                    <TextView
                        android:textSize="34sp"
                        android:textColor="@color/colorLabel_label1"
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home"
                        android:fontFamily="@font/inter_extrabold_800"
                        android:layout_marginStart="@dimen/margin_20"/>
                </LinearLayout>
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/collapsing_toolbar"
                    android:background="@color/colorBackground_canvas"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/top_bar_total_height"
                    app:contentInsetLeft="0dp"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="parallax"
                    app:layout_scrollFlags="exitUntilCollapsed"
                    app:titleMargin="0dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/topbar"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/top_bar_total_height"
                        app:layout_collapseMode="parallax"
                        app:layout_scrollFlags="exitUntilCollapsed">
                        <TextView
                            android:textSize="@dimen/text_size_17"
                            android:textColor="@color/colorLabel_label1"
                            android:id="@+id/title"
                            android:visibility="invisible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/home"
                            android:fontFamily="@font/inter_semibold_600"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:id="@+id/LL_getPremium"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/margin_16"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                            <ImageView
                                android:layout_width="@dimen/img_size_16"
                                android:layout_height="@dimen/img_size_16"
                                app:srcCompat="@drawable/ic_subscription"/>
                            <TextView
                                android:textSize="@dimen/text_size_17"
                                android:textColor="@color/colorGlobal_accent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_16"
                                android:layout_marginBottom="@dimen/margin_16"
                                android:text="@string/get_premium"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_semibold_600"
                                android:layout_marginStart="@dimen/margin_4"/>
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:id="@+id/LL_connect"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/margin_16">
                            <TextView
                                android:textSize="@dimen/text_size_21"
                                android:textColor="@color/colorLabel_label1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/connect"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_extrabold_800"
                                android:layout_marginStart="@dimen/margin_20"/>
                            <ImageView
                                android:id="@+id/img_connect_plus"
                                android:background="@drawable/bg_corner50_raised"
                                android:padding="@dimen/padding_4"
                                android:layout_width="@dimen/img_size_24"
                                android:layout_height="@dimen/img_size_24"
                                android:layout_marginEnd="@dimen/margin_20"
                                app:srcCompat="@drawable/ic_m__plus"/>
                            <ImageView
                                android:id="@+id/img_connect"
                                android:background="@drawable/bg_corner50_raised"
                                android:padding="@dimen/padding_4"
                                android:layout_width="@dimen/img_size_24"
                                android:layout_height="@dimen/img_size_24"
                                android:layout_marginEnd="@dimen/margin_20"
                                app:srcCompat="@drawable/ic_m__chevron_forward"/>
                        </LinearLayout>
                        <TextView
                            android:textSize="@dimen/text_size_15"
                            android:id="@+id/tv_connect"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_4"
                            android:text="@string/hint_19"
                            android:fontFamily="@font/inter_medium_500"
                            android:layout_marginStart="@dimen/margin_20"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_connect"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_12"
                            android:paddingStart="@dimen/padding_6"
                            android:paddingEnd="@dimen/padding_6"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/margin_16">
                            <TextView
                                android:textSize="@dimen/text_size_21"
                                android:textColor="@color/colorLabel_label1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/favorites"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_extrabold_800"
                                android:layout_marginStart="@dimen/margin_20"/>
                            <ImageView
                                android:id="@+id/img_favorites_more_btn"
                                android:background="@drawable/bg_corner50_raised"
                                android:padding="@dimen/padding_4"
                                android:layout_width="@dimen/img_size_24"
                                android:layout_height="@dimen/img_size_24"
                                android:layout_marginEnd="@dimen/margin_20"
                                app:srcCompat="@drawable/ic_m__chevron_forward"/>
                        </LinearLayout>
                        <TextView
                            android:textSize="@dimen/text_size_15"
                            android:id="@+id/tv_favorites_empty_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_4"
                            android:text="@string/hint_21"
                            android:fontFamily="@font/inter_medium_500"
                            android:layout_marginStart="@dimen/margin_20"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_favorites"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_12"
                            android:paddingStart="@dimen/padding_6"
                            android:paddingEnd="@dimen/padding_6"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/margin_16">
                            <TextView
                                android:textSize="@dimen/text_size_21"
                                android:textColor="@color/colorLabel_label1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/picked_for_you"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_extrabold_800"
                                android:layout_marginStart="@dimen/margin_20"/>
                        </LinearLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_pickedForYou"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_12"
                            android:paddingStart="@dimen/padding_6"
                            android:paddingEnd="@dimen/padding_6"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/margin_16">
                            <TextView
                                android:textSize="@dimen/text_size_21"
                                android:textColor="@color/colorLabel_label1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/collections"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_extrabold_800"
                                android:layout_marginStart="@dimen/margin_20"/>
                            <ImageView
                                android:id="@+id/img_collections_more_btn"
                                android:background="@drawable/bg_corner50_raised"
                                android:padding="@dimen/padding_4"
                                android:layout_width="@dimen/img_size_24"
                                android:layout_height="@dimen/img_size_24"
                                android:layout_marginEnd="@dimen/margin_20"
                                app:srcCompat="@drawable/ic_m__chevron_forward"/>
                        </LinearLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_collections"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_12"
                            android:paddingStart="@dimen/padding_6"
                            android:paddingEnd="@dimen/padding_6"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:id="@+id/LL_goals"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/margin_16">
                            <TextView
                                android:textSize="@dimen/text_size_21"
                                android:textColor="@color/colorLabel_label1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/goals"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_extrabold_800"
                                android:layout_marginStart="@dimen/margin_20"/>
                            <ImageView
                                android:background="@drawable/bg_corner50_raised"
                                android:padding="@dimen/padding_4"
                                android:layout_width="@dimen/img_size_24"
                                android:layout_height="@dimen/img_size_24"
                                android:layout_marginEnd="@dimen/margin_20"
                                app:srcCompat="@drawable/ic_m__chevron_forward"/>
                        </LinearLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_goals"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_12"
                            android:paddingStart="@dimen/padding_6"
                            android:paddingEnd="@dimen/padding_6"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
