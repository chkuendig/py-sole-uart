<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/fragment_banner_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/bannerImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/statusBarHeight"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingStart="@dimen/padding_16"
            android:paddingEnd="@dimen/padding_16">
            <androidx.cardview.widget.CardView
                android:id="@+id/countDownTimeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorGlobal_black_overlay50"
                app:cardCornerRadius="40dp"
                app:cardElevation="0dp"
                app:contentPaddingBottom="@dimen/padding_8"
                app:contentPaddingLeft="@dimen/padding_16"
                app:contentPaddingRight="@dimen/padding_16"
                app:contentPaddingTop="@dimen/padding_8">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/ic_s__xmark"
                        app:tint="@color/colorGlobal_white"/>
                    <TextView
                        android:textSize="@dimen/text_size_17"
                        android:textColor="@color/colorGlobal_white"
                        android:id="@+id/countDownTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular_400"
                        android:layout_marginStart="@dimen/margin_8"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/dontShowAgain"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorGlobal_black_overlay50"
                app:cardCornerRadius="40dp"
                app:cardElevation="0dp"
                app:contentPaddingBottom="@dimen/padding_8"
                app:contentPaddingLeft="@dimen/padding_16"
                app:contentPaddingRight="@dimen/padding_16"
                app:contentPaddingTop="@dimen/padding_8">
                <TextView
                    android:textSize="@dimen/text_size_17"
                    android:textColor="@color/colorGlobal_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dont_show_again"
                    android:fontFamily="@font/inter_semibold_600"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/msgBackground"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <LinearLayout
                android:orientation="vertical"
                android:paddingTop="@dimen/padding_32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:textSize="@dimen/text_size_34"
                    android:textColor="@color/colorGlobal_white"
                    android:gravity="center"
                    android:id="@+id/msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_32"
                    android:shadowColor="#33000000"
                    android:shadowDx="0"
                    android:shadowDy="2.45"
                    android:shadowRadius="4.9"
                    android:fontFamily="@font/inter_extrabold_800"
                    android:textAlignment="center"
                    android:layout_marginStart="@dimen/margin_24"
                    android:layout_marginEnd="@dimen/margin_24"/>
                <Button
                    android:textSize="@dimen/text_size_17"
                    android:textColor="@color/colorGlobal_white"
                    android:id="@+id/btn"
                    android:background="@drawable/bg_corner28_bg_red"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_32"
                    android:minHeight="48dp"
                    android:text="@string/done"
                    android:textAllCaps="false"
                    android:fontFamily="@font/inter_semibold_600"
                    android:layout_marginStart="@dimen/margin_32"
                    android:layout_marginEnd="@dimen/margin_32"
                    android:stateListAnimator="@null"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</FrameLayout>
