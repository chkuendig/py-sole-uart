<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/adapter_history_item_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_personalBest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-5dp"
        android:elevation="1dp"
        app:layout_constraintEnd_toEndOf="@+id/LL_img"
        app:layout_constraintTop_toTopOf="@+id/LL_img"
        app:srcCompat="@drawable/ic_personal_best"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/LL_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/padding_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/img_remove"
            android:visibility="gone"
            android:layout_width="24dp"
            android:layout_height="@dimen/img_size_44"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_8"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/margin_12"
            app:srcCompat="@drawable/ic_m__minus_fill_circle"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_8"
            android:layout_marginStart="@dimen/margin_12"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">
            <ImageView
                android:id="@+id/img"
                android:padding="@dimen/padding_12"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:srcCompat="@drawable/ic_machine_treadmill"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/LL_history"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_12"
        android:layout_marginEnd="@dimen/margin_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/LL_img"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="@dimen/text_size_17"
                android:textColor="@color/colorLabel_label1"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/history"
                android:layout_weight="1"
                android:fontFamily="@font/inter_semibold_600"/>
            <TextView
                android:textSize="@dimen/text_size_17"
                android:textColor="@color/colorLabel_label1"
                android:id="@+id/value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000 kg"
                android:fontFamily="@font/inter_medium_500"/>
            <ImageView
                android:id="@+id/img_arrow"
                android:padding="@dimen/padding_4"
                android:visibility="visible"
                android:layout_width="@dimen/img_size_24"
                android:layout_height="@dimen/img_size_24"
                app:srcCompat="@drawable/ic_m__chevron_forward"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/colorLabel_label3"
                android:id="@+id/sportsParts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Glutes, legs"
                android:layout_weight="1"
                android:fontFamily="@font/inter_medium_500"/>
            <TextView
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/colorLabel_label3"
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:fontFamily="@font/inter_medium_500"/>
            <ImageView
                android:id="@+id/img_space"
                android:padding="@dimen/padding_4"
                android:visibility="invisible"
                android:layout_width="@dimen/img_size_24"
                android:layout_height="@dimen/img_size_24"
                app:srcCompat="@drawable/ic_m__chevron_forward"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
