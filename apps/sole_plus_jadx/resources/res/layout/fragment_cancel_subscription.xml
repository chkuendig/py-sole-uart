<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/fragment_cancel_subscription_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tobBar"
        android:layout_width="0dp"
        android:layout_height="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/img_back"
            android:padding="@dimen/padding_16"
            android:visibility="visible"
            android:layout_width="@dimen/img_size_56"
            android:layout_height="@dimen/img_size_56"
            android:layout_marginStart="@dimen/margin_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_m__xmark"/>
        <ImageView
            android:id="@+id/img_search"
            android:padding="@dimen/padding_16"
            android:visibility="invisible"
            android:layout_width="@dimen/img_size_56"
            android:layout_height="@dimen/img_size_56"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:layout_marginEnd="@dimen/margin_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_m__search_red"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:fillViewport="true"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tobBar">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_20">
            <TextView
                android:textSize="@dimen/text_size_34"
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/taking_a_break"
                android:fontFamily="@font/inter_extrabold_800"/>
            <TextView
                android:textSize="@dimen/text_size_17"
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_12"
                android:text="@string/hint_33"
                android:fontFamily="@font/inter_regular_400"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_32">
                <RadioGroup
                    android:orientation="vertical"
                    android:id="@+id/radioGroupReasons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:textSize="@dimen/text_size_17"
                        android:textColor="@color/colorLabel_label1"
                        android:id="@+id/rb_no_need_premium"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:text="@string/reason_no_need_premium"
                        android:drawablePadding="12dp"
                        android:drawableStart="@drawable/check"
                        android:fontFamily="@font/inter_medium_500"
                        android:paddingStart="@dimen/padding_8"
                        android:paddingEnd="@dimen/padding_8"
                        android:paddingVertical="8dp"/>
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:textSize="@dimen/text_size_17"
                        android:textColor="@color/colorLabel_label1"
                        android:id="@+id/rb_no_longer_use"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:text="@string/reason_no_longer_use"
                        android:drawablePadding="12dp"
                        android:drawableStart="@drawable/check"
                        android:fontFamily="@font/inter_medium_500"
                        android:paddingStart="@dimen/padding_8"
                        android:paddingEnd="@dimen/padding_8"
                        android:paddingVertical="8dp"/>
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:textSize="@dimen/text_size_17"
                        android:textColor="@color/colorLabel_label1"
                        android:id="@+id/rb_routine_changed"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:text="@string/reason_routine_changed"
                        android:drawablePadding="12dp"
                        android:drawableStart="@drawable/check"
                        android:fontFamily="@font/inter_medium_500"
                        android:paddingStart="@dimen/padding_8"
                        android:paddingEnd="@dimen/padding_8"
                        android:paddingVertical="8dp"/>
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:textSize="@dimen/text_size_17"
                        android:textColor="@color/colorLabel_label1"
                        android:id="@+id/rb_cost_high"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:text="@string/reason_cost_high"
                        android:drawablePadding="12dp"
                        android:drawableStart="@drawable/check"
                        android:fontFamily="@font/inter_medium_500"
                        android:paddingStart="@dimen/padding_8"
                        android:paddingEnd="@dimen/padding_8"
                        android:paddingVertical="8dp"/>
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:textSize="@dimen/text_size_17"
                        android:textColor="@color/colorLabel_label1"
                        android:id="@+id/rb_unhappy_app"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:text="@string/reason_unhappy_app"
                        android:drawablePadding="12dp"
                        android:drawableStart="@drawable/check"
                        android:fontFamily="@font/inter_medium_500"
                        android:paddingStart="@dimen/padding_8"
                        android:paddingEnd="@dimen/padding_8"
                        android:paddingVertical="8dp"/>
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:textSize="@dimen/text_size_17"
                        android:textColor="@color/colorLabel_label1"
                        android:id="@+id/rb_other"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:text="@string/reason_other"
                        android:drawablePadding="12dp"
                        android:drawableStart="@drawable/check"
                        android:fontFamily="@font/inter_medium_500"
                        android:paddingStart="@dimen/padding_8"
                        android:paddingEnd="@dimen/padding_8"
                        android:paddingVertical="8dp"/>
                </RadioGroup>
                <EditText
                    android:textSize="@dimen/text_size_17"
                    android:textColor="@color/colorLabel_label1"
                    android:textColorHint="@color/colorLabel_label3"
                    android:id="@+id/et_other_reason"
                    android:background="@drawable/bg_corner28_outline"
                    android:padding="12dp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16"
                    android:hint="@string/reason_other_hint"
                    android:fontFamily="@font/inter_medium_500"
                    app:layout_constraintTop_toBottomOf="@+id/radioGroupReasons"/>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="36dp">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:id="@+id/LL_cancelSubscription"
                        android:background="@drawable/bg_corner32_accent"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:textSize="@dimen/text_size_17"
                            android:textColor="@color/colorGlobal_white"
                            android:id="@+id/tv_cancelBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_16"
                            android:layout_marginBottom="@dimen/margin_16"
                            android:text="@string/cancel_subscription"
                            android:fontFamily="@font/inter_semibold_600"
                            android:paddingStart="@dimen/padding_36"
                            android:paddingEnd="@dimen/padding_36"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
