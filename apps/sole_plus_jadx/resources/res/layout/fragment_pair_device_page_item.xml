<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/CL"
    android:tag="layout/fragment_pair_device_page_item_0"
    android:background="@color/colorBackground_canvas"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            app:srcCompat="@drawable/device_elliptical"/>
        <TextView
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/colorLabel_label3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/device_found"
            android:fontFamily="@font/inter_medium_500"/>
        <TextView
            android:textSize="@dimen/text_size_38"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12"
            android:text="Name"
            android:fontFamily="@font/inter_extrabold_800"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
