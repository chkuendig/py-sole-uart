<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="horizontal"
    android:id="@+id/layout"
    android:tag="layout/adapter_display_stats_select_item_0"
    android:background="@drawable/bg_corner28_raised"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_6"
    android:layout_marginBottom="@dimen/margin_6">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="@dimen/padding_16"
        android:paddingBottom="@dimen/padding_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/img_size_24"
            android:layout_height="@dimen/img_size_24"
            android:layout_marginStart="@dimen/margin_16"
            app:srcCompat="@drawable/ic_stats_timer_fill02"/>
        <TextView
            android:textSize="@dimen/text_size_17"
            android:textColor="@color/colorLabel_label1"
            android:ellipsize="end"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/remaining_time"
            android:maxLines="1"
            android:layout_weight="1"
            android:fontFamily="@font/inter_semibold_600"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_marginEnd="@dimen/margin_4"/>
        <ImageView
            android:id="@+id/img_select"
            android:layout_width="@dimen/img_size_24"
            android:layout_height="@dimen/img_size_24"
            android:layout_marginEnd="@dimen/margin_16"
            app:srcCompat="@drawable/ic_s__checkmark"/>
    </LinearLayout>
</LinearLayout>
