<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="horizontal"
    android:id="@+id/ll_btn_wrap"
    android:tag="layout/adapter_club_edit_privacy_item_0"
    android:background="@drawable/bg_corner28_canvas_white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="32dp"
    android:paddingEnd="32dp"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="10dp"
    android:paddingVertical="10dp">
    <ImageView
        android:id="@+id/tv_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="1dp"
        android:src="@drawable/ic_m__eye_open"
        android:layout_marginEnd="8dp"
        app:tint="@color/colorPalette_red"/>
    <TextView
        android:textColor="@color/colorPalette_red"
        android:id="@+id/tv_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/challenge_privacy_public"
        android:layout_marginEnd="8dp"
        style="@style/Widget.MyStyle.text_Label_1"/>
</LinearLayout>
