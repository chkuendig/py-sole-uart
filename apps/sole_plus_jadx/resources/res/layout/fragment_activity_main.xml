<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/fragment_activity_main_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/statusBarHeight"
        android:background="@color/colorBackground_canvas"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:background="@color/colorBackground_canvas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statusBarHeight">
        <com.google.android.material.appbar.AppBarLayout
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:id="@+id/appBarLayout"
            android:background="@color/colorBackground_canvas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="exitUntilCollapsed|scroll">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="60dp">
                    <TextView
                        android:textSize="34sp"
                        android:textColor="@color/colorLabel_label1"
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/activity"
                        android:fontFamily="@font/inter_extrabold_800"
                        android:layout_marginStart="@dimen/margin_20"/>
                </LinearLayout>
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/collapsing_toolbar"
                    android:background="@color/colorBackground_canvas"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/top_bar_total_height"
                    app:contentInsetLeft="0dp"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="parallax"
                    app:layout_scrollFlags="exitUntilCollapsed"
                    app:titleMargin="0dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/topbar"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/top_bar_total_height"
                        app:layout_collapseMode="parallax"
                        app:layout_scrollFlags="exitUntilCollapsed">
                        <ImageView
                            android:id="@+id/add"
                            android:padding="@dimen/padding_8"
                            android:visibility="invisible"
                            android:layout_width="@dimen/img_size_44"
                            android:layout_height="@dimen/img_size_44"
                            android:layout_marginStart="@dimen/margin_12"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_m__plus_circle"/>
                        <TextView
                            android:textSize="@dimen/text_size_17"
                            android:textColor="@color/colorLabel_label1"
                            android:id="@+id/title"
                            android:visibility="invisible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/activity"
                            android:fontFamily="@font/inter_semibold_600"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <ImageView
                            android:id="@+id/endImg"
                            android:padding="@dimen/padding_8"
                            android:visibility="invisible"
                            android:layout_width="@dimen/img_size_44"
                            android:layout_height="@dimen/img_size_44"
                            android:layout_marginEnd="@dimen/margin_12"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_m__search"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_20">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <TextView
                                android:textSize="@dimen/text_size_15"
                                android:textColor="@color/colorLabel_label2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/workouts"
                                android:fontFamily="@font/inter_semibold_600"
                                android:layout_marginStart="@dimen/margin_20"
                                android:layout_marginEnd="@dimen/margin_20"/>
                            <TextView
                                android:textSize="@dimen/text_size_24"
                                android:textColor="@color/colorLabel_accent"
                                android:ellipsize="end"
                                android:id="@+id/tv_workoutsCount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:maxLines="1"
                                android:fontFamily="@font/inter_black_900"
                                android:layout_marginStart="@dimen/margin_20"
                                android:layout_marginEnd="@dimen/margin_20"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <TextView
                                android:textSize="@dimen/text_size_15"
                                android:textColor="@color/colorLabel_label2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/total_calories"
                                android:fontFamily="@font/inter_semibold_600"
                                android:layout_marginStart="@dimen/margin_20"
                                android:layout_marginEnd="@dimen/margin_20"/>
                            <TextView
                                android:textSize="@dimen/text_size_24"
                                android:textColor="@color/colorLabel_accent"
                                android:ellipsize="end"
                                android:id="@+id/tv_totalCalories"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:maxLines="1"
                                android:fontFamily="@font/inter_black_900"
                                android:layout_marginStart="@dimen/margin_20"
                                android:layout_marginEnd="@dimen/margin_20"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <TextView
                                android:textSize="@dimen/text_size_15"
                                android:textColor="@color/colorLabel_label2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/active_hours"
                                android:fontFamily="@font/inter_semibold_600"
                                android:layout_marginStart="@dimen/margin_20"
                                android:layout_marginEnd="@dimen/margin_20"/>
                            <TextView
                                android:textSize="@dimen/text_size_24"
                                android:textColor="@color/colorLabel_accent"
                                android:ellipsize="end"
                                android:id="@+id/tv_activeHours"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:maxLines="1"
                                android:fontFamily="@font/inter_black_900"
                                android:layout_marginStart="@dimen/margin_20"
                                android:layout_marginEnd="@dimen/margin_20"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <TextView
                                android:textSize="@dimen/text_size_15"
                                android:textColor="@color/colorLabel_label2"
                                android:id="@+id/tv_totalDistanceTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/total_kilometers"
                                android:fontFamily="@font/inter_semibold_600"
                                android:layout_marginStart="@dimen/margin_20"
                                android:layout_marginEnd="@dimen/margin_20"/>
                            <TextView
                                android:textSize="@dimen/text_size_24"
                                android:textColor="@color/colorLabel_accent"
                                android:ellipsize="end"
                                android:id="@+id/tv_totalDistance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:maxLines="1"
                                android:fontFamily="@font/inter_black_900"
                                android:layout_marginStart="@dimen/margin_20"
                                android:layout_marginEnd="@dimen/margin_20"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_20">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/LL_history"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/margin_20"
                        android:layout_marginEnd="@dimen/margin_20">
                        <TextView
                            android:textSize="@dimen/text_size_21"
                            android:textColor="@color/colorLabel_label1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/history"
                            android:layout_weight="1"
                            android:fontFamily="@font/inter_extrabold_800"/>
                        <ImageView
                            android:id="@+id/img_history_arrow"
                            android:background="@drawable/bg_corner32_raised"
                            android:padding="@dimen/padding_4"
                            android:visibility="invisible"
                            android:layout_width="@dimen/img_size_24"
                            android:layout_height="@dimen/img_size_24"
                            app:srcCompat="@drawable/ic_m__chevron_forward"/>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_history"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/LL_historyEmpty"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textSize="@dimen/text_size_15"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/hint_23"
                            android:layout_marginStart="@dimen/margin_20"
                            android:layout_marginEnd="@dimen/margin_20"/>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="136dp"
                            android:layout_marginTop="@dimen/margin_20"
                            app:srcCompat="@drawable/history_empty"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_20">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/LL_trainingVolume"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/margin_20"
                        android:layout_marginEnd="@dimen/margin_20">
                        <TextView
                            android:textSize="@dimen/text_size_21"
                            android:textColor="@color/colorLabel_label1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/active_time"
                            android:layout_weight="1"
                            android:fontFamily="@font/inter_extrabold_800"/>
                        <ImageView
                            android:background="@drawable/bg_corner32_raised"
                            android:padding="@dimen/padding_4"
                            android:visibility="invisible"
                            android:layout_width="@dimen/img_size_24"
                            android:layout_height="@dimen/img_size_24"
                            app:srcCompat="@drawable/ic_m__chevron_forward"/>
                    </LinearLayout>
                    <TextView
                        android:textSize="@dimen/text_size_15"
                        android:textColor="@color/colorLabel_label3"
                        android:id="@+id/chartTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_8"
                        android:text="@string/weekly_workout_time"
                        android:fontFamily="@font/inter_medium_500"
                        android:layout_marginStart="@dimen/margin_20"
                        android:layout_marginEnd="@dimen/margin_20"/>
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChart"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_margin="16dp"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/padding_36"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_20">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/LL_personalBest"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/margin_20"
                        android:layout_marginEnd="@dimen/margin_20">
                        <TextView
                            android:textSize="@dimen/text_size_21"
                            android:textColor="@color/colorLabel_label1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/personal_best"
                            android:layout_weight="1"
                            android:fontFamily="@font/inter_extrabold_800"/>
                        <ImageView
                            android:id="@+id/img_personal_best_arrow"
                            android:background="@drawable/bg_corner32_raised"
                            android:padding="@dimen/padding_4"
                            android:visibility="visible"
                            android:layout_width="@dimen/img_size_24"
                            android:layout_height="@dimen/img_size_24"
                            app:srcCompat="@drawable/ic_m__chevron_forward"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/LL_personalBestEmpty"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textSize="@dimen/text_size_15"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/hint_24"
                            android:layout_marginStart="@dimen/margin_20"
                            android:layout_marginEnd="@dimen/margin_20"/>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="136dp"
                            android:layout_marginTop="@dimen/margin_20"
                            app:srcCompat="@drawable/history_empty"/>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_personalBest"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="@dimen/padding_12"
                        android:paddingEnd="@dimen/padding_12"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/sectionsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
