<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/ll_main_wrap"
    android:tag="layout/adapter_club_search_item_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/img_quitBtn"
        android:padding="9dp"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_m__minus_fill_circle"
        android:layout_marginStart="-9dp"
        app:tint="@color/colorGlobal_signal"/>
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/img_deleteBtn"
        android:padding="9dp"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_m__trash_fill"
        android:layout_marginStart="-9dp"
        app:tint="@color/colorGlobal_signal"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_card_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp">
            <ImageView
                android:id="@+id/img_mainImg"
                android:background="@color/colorBackground_raised"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/club_challenge_img"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp">
                <TextView
                    android:id="@+id/tv_targetVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5K"
                    style="@style/Widget.MyStyle.text_number_M"/>
                <TextView
                    android:id="@+id/tv_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/challenge_race"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="12dp"
                    style="@style/Widget.MyStyle.text_number_Units"/>
                <View
                    android:layout_gravity="center_vertical"
                    android:background="@color/colorLabel_outline"
                    android:layout_width="2dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="12dp"/>
                <TextView
                    android:textColor="@color/colorLabel_label3"
                    android:id="@+id/tv_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    style="@style/Widget.MyStyle.text_number_M"/>
                <TextView
                    android:textColor="@color/colorLabel_label3"
                    android:id="@+id/tv_dayUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/days"
                    android:layout_marginStart="4dp"
                    style="@style/Widget.MyStyle.text_number_Units"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="Go With The Flow"
                style="@style/Widget.MyStyle.text_Label_1"/>
            <TextView
                android:textColor="@color/colorLabel_label3"
                android:id="@+id/tv_startDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MyStyle.text_Body_2"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
