<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="24dp"/>
            <gradient
                android:startColor="@color/colorBackground_tinted_raised"
                android:endColor="@color/colorBackground_tinted_raised"
                android:angle="0"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="24dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/colorGlobal_accent"/>
        </shape>
    </item>
</layer-list>
